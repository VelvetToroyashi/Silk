@namespace Silk.Dashboard.Components

<MudContainer Class="d-flex flex-column align-center justify-center">
    <MudImage Class="rounded" Src="@ImageUrl" Width="256" ObjectFit="ObjectFit.Contain"/>

    @if (!string.IsNullOrWhiteSpace(Message))
    {
        <MudText Class="my-3" Typo="Typo.h4">
            @Message
        </MudText>
    }

    @ChildContent
</MudContainer>

@code {

    [Parameter]
    public string Message { get; set; } = "Uh Oh, something went wrong!";

    [Parameter]
    public string ImageUrl { get; set; } = "images/rp_flop.png";

    [Parameter]
    public RenderFragment ChildContent { get; set; }

}